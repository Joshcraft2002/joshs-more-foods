{
  "model": {
    "type": "minecraft:composite",
    "models": [
      {
        "type": "minecraft:model",
        "model": "jmmf:block/cooking_station"
      },
      {
        "type": "minecraft:select",
        "property": "minecraft:custom_model_data",
        "cases": [
          {
            "when": "jmmf:cookware_empty",
            "model": { "type": "minecraft:empty" }
          },
          {
            "when": "jmmf:cookware_cooking_pot",
            "model": {
              "type": "minecraft:model",
              "model": "jmmf:block/cooking_pot"
            }
          },
          {
            "when": "jmmf:cookware_frying_pan",
            "model": {
              "type": "minecraft:model",
              "model": "jmmf:block/frying_pan"
            }
          },
          {
            "when": "jmmf:cookware_tea_kettle",
            "model": {
              "type": "minecraft:model",
              "model": "jmmf:block/tea_kettle"
            }
          }
        ],
        "fallback": { "type": "minecraft:empty" }
      }
    ],
    "oversized_in_gui": true
  }
}